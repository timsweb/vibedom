FROM alpine:latest

# Use Alpine CDN mirror for more reliable builds
RUN sed -i 's/dl-cdn.alpinelinux.org/cdn.alpinelinux.org/g' /etc/apk/repositories

# Install required packages
RUN apk add --no-cache \
    bash \
    openssh \
    git \
    curl \
    sudo \
    rsync \
    diffutils \
    ca-certificates \
    ca-certificates-bundle

# Install Claude Code dependencies (Alpine/musl requirements)
RUN apk add --no-cache libgcc libstdc++ ripgrep

# Install Claude Code CLI (goes to /root/.local/bin/claude)
RUN curl -fsSL https://claude.ai/install.sh | bash

# Configure for Alpine compatibility
ENV USE_BUILTIN_RIPGREP=0
ENV PATH="/root/.local/bin:$PATH"

# Create directories
RUN mkdir -p /mnt/workspace /work /mnt/config /var/log/vibedom

# Add startup script
COPY startup.sh /usr/local/bin/
RUN chmod +x /usr/local/bin/startup.sh

CMD ["/usr/local/bin/startup.sh"]
